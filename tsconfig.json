{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "moduleResolution": "bundler",
        "useDefineForClassFields": true,
        "allowImportingTsExtensions": true,
        "paths": {
            "@/lib/*": ["./src/lib/*"],
            "@/components/*": ["./src/components/*"]
        }
    },
    "include": ["./src"],
    "exclude": ["./node_modules"]
}
